<configuration>
    <appender name="DESKTOP" class="ch.qos.logback.core.FileAppender">
        <file>${user.home}/Desktop/desktop-logger.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="DESKTOP"/>
    </root>
</configuration>
